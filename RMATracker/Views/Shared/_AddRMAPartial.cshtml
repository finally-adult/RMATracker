@model ActiveViewModel

<div class="modal fade" id="addRMAModal" tabindex="-1" role="dialog" aria-labelledby="addRMAModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRMAModalLongTitle">Add RMA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="AddRMA">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model.RMA.RMANumber" class="control-label"></label>
                        <input asp-for="@Model.RMA.RMANumber" class="form-control" />
                        <span asp-validation-for="RMA.RMANumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.RMA.Description" class="control-label"></label>
                        <input asp-for="@Model.RMA.Description" class="form-control" />
                        <span asp-validation-for="RMA.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select id="partSelect" asp-items="@Model.Parts" class="selectpicker form-control w-100" data-live-search="true">
                            <option value="0">Select Part</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select id="serialNumberSelect" asp-for="@Model.SerialId" class="selectpicker form-control w-100" data-live-search="true">
                            <option value="0">Select Serial Number</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>