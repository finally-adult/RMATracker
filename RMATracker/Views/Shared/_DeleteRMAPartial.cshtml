@model ActiveViewModel

<div class="modal fade" id="deleteRMAModal" tabindex="-1" role="dialog" aria-labelledby="deleteRMAModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteRMAModalLongTitle">Delete RMA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="DeleteRMA">
                    <input asp-for="@Model.RMA.Id" id="deleteRMAId" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="alert alert-danger" role="alert">
                        Are you sure you want to delete RMA: <span id="rmaIdText"></span>?
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>